char* fairRations(int B_count, int* B) {
    static char result[32];  // static allocation to safely return a string
    int loaves = 0;

    for (int i = 0; i < B_count - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            loaves += 2;
        }
    }

    // Check if the last person is even
    if (B[B_count - 1] % 2 != 0) {
        return "NO";
    }

    snprintf(result, sizeof(result), "%d", loaves);
    return result;
}
