#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        int n, k;
        cin >> n >> k;

        vector<int> a(n);
        for (int i = 0; i < n; i++) cin >> a[i];

        long long count = 0;
        vector<long long> freq(k, 0);  // to store frequency of each remainder
        long long prefixSum = 0;

        freq[0] = 1;  // empty prefix (important)

        for (int i = 0; i < n; i++) {
            prefixSum += a[i];
            int mod = ((prefixSum % k) + k) % k;  // handle negatives

            count += freq[mod];  // all previous prefixes with same remainder
            freq[mod]++;         // add current prefix to map
        }

        cout << count << "\n";
    }

    return 0;
}
